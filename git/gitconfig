[include]
    # For username / creds / etc
    path = ~/.gitconfig_local
[core]
    excludesfile = /Users/osso/.gitignore
    quotepath = false
    pager = diff-highlight | git-strip-diff | less
[alias]
    ci = commit
    co = checkout
    ls = ls-files
    pull-overwrite = pull -s recursive -X theirs
    sh = show --color

    # One letter shortcuts
    b = branch
    d = diff --color
    a = commit -a --amend
    c = commit -a -m
    s = status --branch --short
    r = rebase -i
    f = fetch
    z = cherry-pick
    p = pull --rebase

    # Rebase
    ra = rebase --abort
    rc = rebase --continue
    rs = rebase --skip

    # Cherry-pick
    zc = cherry-pick --continue
    za = cherry-pick --abort

    mt = mergetool -y
    ds = diff --staged

    # Branches listing
    lbi = !"git for-each-ref --format='%(committerdate:short) %(refname)' --sort=committerdate refs/heads/*$1*"
    rbi = !"git for-each-ref --format='%(committerdate:short) %(refname)' --sort=committerdate refs/remotes/$1"
    # Logs
    l = log --graph --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(bold white)— %an%C(reset)%C(bold yellow)%d%C(reset)' --abbrev-commit --date=relative
    ll = log --oneline --abbrev=8 --stat --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(bold white)— %an%C(reset)%C(bold yellow)%d%C(reset)'
    lp = log -p
    promote = !"git push --set-upstream origin \"$(git symbolic-ref --quiet --short HEAD)\""
    delete-branch = !"~/bin/git-delete-branch"

    # merge
    mff = merge --ff-only
    # bisect
    good = bisect good
    bad = bisect bad
    # stash
    ss = stash
    sl = stash list
    sa = stash apply
    sd = stash drop

[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Users/osso/Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[mergetool "sublime"]
    cmd = subl -w $MERGED
    trustExitCode = false
[mergetool]
    keepBackup = false

[branch]
    autosetuprebase = always
[push]
    default = current
[merge]
    # Include summaries of merged commits in newly created merge commit messages
    log = true
	conflictstyle = diff3
	tool = sublime

[color]
  branch = auto
  diff = auto
  status = auto
[color "branch"]
    plain = normal
    current = normal reverse
    local = normal
    remote = normal
[color "diff"]
    plain = normal
    commit = yellow
    whitespace = normal red
    meta = yellow
    frag = yellow bold
    old = red
    new = green
[color "diff-highlight"]
   oldNormal = "red"
   oldHighlight = "red ul"
   newNormal = "green"
   newHighlight = "green ul"
[color "status"]
    header = normal
    added = green
    changed = yellow
    untracked = normal
    updated = green
    nobranch = red
[color "grep"]
    match = normal
[color "interactive"]
    prompt = normal
    header = normal
    help = normal
    error = normal

[advice]
    # Do not display a warning when checking out a commit hash
    detachedHead = False
    pushNonFastForward = False
[rerere]
    # I am still not convinced
    enabled = false
[apply]
    # Detect whitespace errors when applying a patch
    whitespace = fix

# URL shorthands
[url "git@github.com:"]
    insteadOf = "github:"
    pushInsteadOf = "git://github.com/"
[filter "media"]
	clean = git media clean %f
	smudge = git media smudge %f
	required = true
[credential]
	helper = /usr/share/doc/git/contrib/credential/gnome-keyring/git-credential-gnome-keyring
