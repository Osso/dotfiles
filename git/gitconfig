[include]
    # For username / creds / etc
    path = ~/.gitconfig_local
[core]
    excludesfile = ~/.gitignore
    quotepath = false
	attributesfile = ~/.gitattributes
    # pager = diff-highlight | git-strip-diff | less
[alias]
    ci = commit
    co = checkout
    ls = ls-files
    pull-overwrite = pull -s recursive -X theirs
    sh = show --color
    sh-code = !"git show | code -"
    d-code = !"git diff | code -"
    pu = push
    pf = push --force-with-lease
    ups = reset HEAD~1

    # One letter shortcuts
    b = branch
    d = diff --color --patience
    a = commit -a --amend
    c = commit -a -m
    s = status --branch --short
    r = rebase -i -X ignore-blank-lines -X patience
    f = fetch
    u = push
    z = cherry-pick
    p = pull --rebase -X patience
    m = merge -X ignore-blank-lines --patience

    # Rebase
    ra = rebase --abort
    rc = rebase --continue
    rs = rebase --skip
    rmm = rebase -i -X ignore-blank-lines -X patience origin/master
    rnm = rebase -i -X ignore-blank-lines -X patience origin/next_master
    mnm = merge origin/next_master

    # Cherry-pick
    zc = cherry-pick --continue
    za = cherry-pick --abort

    mt = mergetool -y
    ds = diff --staged
    sw = switch

    # Branches listing
    lbi = !"git for-each-ref --format='%(committerdate:short) %(refname:short)' --sort=committerdate refs/heads/*$1*"
    rbi = !"git for-each-ref --format='%(committerdate:short) %(refname:short)' --sort=committerdate refs/remotes/$1"
    # Logs
    l = log --graph --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %s %C(bold)- %an%C(reset)%C(bold yellow)%d%C(reset)' --abbrev-commit --date=relative
    ll = log --oneline --abbrev=8 --stat --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %s %C(bold)- %an%C(reset)%C(bold yellow)%d%C(reset)'
    refl = reflog --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %s %C(bold)- %an%C(reset)%C(bold yellow)%d%C(reset)' --abbrev-commit --date=relative
    refll = reflog --oneline --abbrev=8 --stat --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %s %C(bold)- %an%C(reset)%C(bold yellow)%d%C(reset)'
    lp = log -p --patience
    promote = !"git push --set-upstream origin \"$(git symbolic-ref --quiet --short HEAD)\""
    db = !"~/bin/git-delete-branch"

    # merge
    mff = merge --ff-only
    ma = merge --abort
    mc = merge --continue
    # bisect
    good = bisect good
    bad = bisect bad
    # stash
    ss = stash
    sl = stash list
    sa = stash apply
    sd = stash drop
    sp = stash pop

[mergetool "code"]
    # cmd = code --wait --merge $REMOTE $LOCAL $BASE $MERGED
    cmd = code --wait \"$MERGED\"
[mergetool]
    keepBackup = false
# [difftool "phpstorm"]
# 	cmd = phpstorm diff \"$LOCAL\" \"$REMOTE\"
# 	trustExitCode = true
# [mergetool "phpstorm"]
# 	# cmd = phpstorm merge \"$LOCAL\" \"$REMOTE\" \"$BASE\" \"$MERGED\"
# 	cmd = phpstorm --wait \"$MERGED\"
# 	trustExitCode = true

[branch]
    autosetuprebase = always
[push]
    default = upstream
[merge]
    # Include summaries of merged commits in newly created merge commit messages
    log = true
	conflictstyle = diff3
	tool = code
[diff]
	tool = code
[color]
  branch = auto
  diff = auto
  status = auto
[color "branch"]
    plain = normal
    current = normal reverse
    local = normal
    remote = normal
[color "diff"]
    plain = normal
    commit = yellow
    whitespace = normal red
    meta = yellow
    frag = yellow bold
    old = dim brightred
    new = dim brightgreen
[color "diff-highlight"]
   oldNormal = "red"
   oldHighlight = "red ul"
   newNormal = "green"
   newHighlight = "green ul"
[color "status"]
    header = normal
    added = green
    changed = yellow
    untracked = normal
    updated = green
    nobranch = red
[color "grep"]
    match = normal
[color "interactive"]
    prompt = normal
    header = normal
    help = normal
    error = normal

[advice]
    # Do not display a warning when checking out a commit hash
    detachedHead = False
    pushNonFastForward = False
[rerere]
    # I am still not convinced
    enabled = false
[apply]
    # Detect whitespace errors when applying a patch
    whitespace = fix

# URL shorthands
[url "git@github.com:"]
    insteadOf = "github:"
    pushInsteadOf = "git://github.com/"
[filter "media"]
	clean = git media clean %f
	smudge = git media smudge %f
	required = true
[credential]
	helper = /usr/share/doc/git/contrib/credential/libsecret/git-credential-libsecret
[diff]
	context = 6
    #algorithm = patience

[merge "lock"]
    name = A python lockfile merge driver using the AST
    driver = git-merge-lock %O %A %B
[merge "in"]
    name = A python deps merge driver using the AST
    driver = git-merge-deps %O %A %B

[init]
	defaultBranch = master
[http]
	postBuffer = 524288000
