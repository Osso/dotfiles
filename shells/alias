#########
# Alias #
#########

alias L="|less"

alias  ..="cd .."
alias  ...="cd ../.."
alias  ....="cd ../../.."
alias  .....="cd ../../../.."

# Ls aliases
alias ls="lsd -h"
alias ll="lsd -lh"
alias la="lsd -lha"

# Serve a directory via http
alias pyserve="python -m http.server"
# Simple smtp server to debug email
alias debug_email="python -m smtpd -n -c DebuggingServer localhost:1025"

# Git pipes
# alias gd="g diff | e -"
# alias gs="g show | e"

# One letter shortcuts
alias l="lsd"
alias L="bat --paging=always"
alias t="pytest"
alias c="cargo"
alias d="docker"
alias e="zeditor"
alias g="git"
alias j="jump"
alias h="history"
alias v="vagrant"
alias w="work_on_project"
alias p="ipython"
alias m="make"
alias n="ninja"
alias a="sudo nala"
alias k="kubectl --kubeconfig=$HOME/.kube/config-reader"
alias f="yazi"

alias dco="docker compose"
alias de="docker exec -it"
alias dr="docker run -it"

# DNS lookup (dog replaces dig)
alias dig="dog"

# External IP address - see ~/.bash/func for publicip function
# Flush Directory Service cache
alias flushdns="sudo service nscd restart"

# View HTTP traffic
alias sniff="sudo ngrep -d 'en1' -t '^(GET|POST) ' 'tcp and port 80'"
alias httpdump="sudo tcpdump -i en1 -n -s 0 -w - | grep -a -o -E \"Host\: .*|GET \/.*\""

# Clipboard aliases (Wayland)
alias copy="wl-copy"
alias paste="wl-paste"

# macOS-style open command
alias open="xdg-open"


# Recursively delete `.DS_Store` files
alias cleanup="find . -type f -name '*.DS_Store' -ls -delete"

# Provision OS (customize path to your provisioning repo)
# alias provision="ansible-playbook ~/Provisioning/playbooks/*.yml -i 127.0.0.1, -Kv"
# alias provision-facts="ansible localhost -i 127.0.0.1, -m setup --connection=local"

# Pipe my public key to my clipboard.
alias pubkey="wl-copy < ~/.ssh/id_ed25519.pub && echo '=> Public key copied to clipboard.'"
# Display python path
alias pypath='python -c "import sys; print(sys.path)" | tr "," "\n" | grep -v "egg"'
# Clean python pyc files
alias pycclean='find . -name "*.pyc" -exec rm {} \;'

# More human utilities
alias df="df -h"
alias part="duf /"
alias du="du -h -c"
alias mkdir="mkdir -vp"
alias tree="tree -Cs"

alias grep="grep --color=auto"
alias ua="sudo nala upgrade -y && sudo nala autoremove -y"
alias psg="ps aux | grep -v grep | grep -i"
alias aptrm="a autoremove --purge"
alias aptsh="nala show"
alias py.test="py.test-3"
alias yarn="yarnpkg"

# Use kitten ssh in Kitty terminal for proper terminfo handling (interactive only)
[[ -n "$KITTY_WINDOW_ID" && -o interactive ]] && alias ssh="kitten ssh"
# Terminal-aware icat alias
if [[ "$TERM_PROGRAM" == "WezTerm" ]]; then
    alias icat="wezterm imgcat"
else
    alias icat="kitty +kitten icat"
fi
alias warp-reauth="warp-cli debug access-reauth"

# Android SDK tools
alias adb="~/Android/Sdk/platform-tools/adb"
alias emulator="~/Android/Sdk/emulator/emulator"
alias android-emu="~/Android/Sdk/emulator/emulator @Medium_Phone_API_34 -gpu host"

# Ayu-themed nmtui
alias nmtui='NEWT_COLORS="root=white,gray
window=white,gray
border=cyan,gray
shadow=black,black
title=yellow,gray
button=gray,cyan
actbutton=gray,yellow
compactbutton=cyan,gray
checkbox=white,gray
actcheckbox=gray,cyan
entry=cyan,gray
disentry=white,gray
label=white,gray
listbox=white,gray
actlistbox=gray,cyan
sellistbox=cyan,gray
actsellistbox=gray,yellow
textbox=white,gray
acttextbox=gray,cyan
emptyscale=gray,gray
fullscale=cyan,gray
helpline=cyan,gray
roottext=cyan,gray" nmtui'
