###############
# Environment #
###############

# Do not query github in homebrew search
export HOMEBREW_NO_GITHUB_API=1

# Invenio
export CFG_INVENIO_USER="osso"
export CFG_INSPIRE_BIBTASK_USER="admin"
export CFG_INVENIO_HOSTNAME="localhost:4000"
export CFG_OPENOFFICE_TMPDIR="/opt/invenio/var/tmp/ooffice-tmp-files"

# Language
export LANG="en_US.UTF-8"
export LC_ALL="en_US.UTF-8"

# Move virtual envs to an easier to access directory
export WORKON_HOME="~/envs"

# Kerberos tickets to login to CERN
export KRB5CCNAME="/tmp/krb5cc_501"

# Needs for java stuff
export JAVA_HOME="/Library/Java/Home"

# Link Homebrew casks in `/Applications` rather than `~/Applications`
export HOMEBREW_CASK_OPTS="--appdir=/Applications"

# Homebrew paths for go
export PATH="$PATH:/usr/local/opt/go/libexec/bin"
# Include homebrew paths
export PATH="/usr/local/sbin:/usr/local/bin:$PATH"
# Include home path
export PATH="$PATH:$HOME/bin"

# Projects directory
export PROJECTS_DIR="$HOME/Projects"

# Boot2docker
if [[ "$(uname)" == 'Darwin' ]]; then
    export DOCKER_HOST="tcp://127.0.0.1:2375"
    export SUBLIME_PATH="/Users/osso/Library/Application Support/Sublime Text 3"
fi

# Interactive mode environment
if [ -n "$PS1" ]; then
    # Sublime as Editor
    export EDITOR='subl -w'

    # Highlight section titles in manual pages (136 is yellow)
    export LESS_TERMCAP_md="$(tput setaf 136)"

    # Always enable colored `grep` output
    export GREP_OPTIONS="--color=auto"

    # Better 'less': less -FRX
    # -F: quit if the contents fit the screen
    # -R: colors
    # -X: no clearing of the screen after quit
    export LESS="FRX"
fi

export FLEETCTL_TUNNEL="192.168.1.44"